
@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    /* Style the stars */
    .fa {
        font-size: 25px;
        cursor: pointer;
        user-select: none;
    }

    /* Full star */
    .checked {
        color: orange;
    }
</style>
<section class="parallax-container overlay-1" data-parallax-img="/Content/asess/images/breadcrumbs.jpg">
    <div class="parallax-content breadcrumbs-custom context-dark">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-9">
                    <h2 class="breadcrumbs-custom-title">Feedback</h2>
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="@Url.Action("index")">Home</a></li>
                        <li class="active">Feedback</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section section-lg bg-gray-1 text-center">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-9 col-lg-7">
                <h3>Enter your feedback</h3>
                <!-- RD Mailform-->
                <form class="rd-form rd-mailform" data-form-output="form-output-global" data-form-type="contact" method="post" action="bat/rd-mailform.php">
                    <div class="form-wrap">
                        <input class="form-input" id="contact-name" type="text" name="name" data-constraints="">
                        <label class="form-label" for="contact-name">Your Name</label>
                    </div>
                    <div class="form-wrap">
                        <input class="form-input" id="contact-email" type="email" name="email" data-constraints="">
                        <label class="form-label" for="contact-email">E-mail</label>
                    </div>
                    <div style="margin-left:40px;">
                        <p>customer satisfaction level</p>
                        <span class="fa fa-star" onclick="rate(this, 1)"></span>
                        <span class="fa fa-star" onclick="rate(this, 2)"></span>
                        <span class="fa fa-star" onclick="rate(this, 3)"></span>
                        <span class="fa fa-star" onclick="rate(this, 4)"></span>
                        <span class="fa fa-star" onclick="rate(this, 5)"></span>
                    </div>
                    <div class="form-wrap">
                        <label class="form-label" for="contact-message"> Message</label>
                        <textarea class="form-input" id="contact-message" name="message" data-constraints=""></textarea>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-12 col-sm-7 col-lg-5">
                            <button class="button button-block button-lg button-primary" type="submit">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section><a class="section section-banner" href="https://www.templatemonster.com/website-templates/monstroid2.html" style="background-image: url(~/Content/asess/images/banner/background-03-1920x310.jpg); background-image: -webkit-image-set( url(~/Content/asess/images/banner/background-03-1920x310.jpg) 1x, url(~/Content/asess/images/banner/background-03-3840x620.jpg) 2x )"></a>
<!-- Page Footer-->

<script>
    // A function to change the color of the stars when clicked
    function rate(element, value) {
        // Get all the stars in the same div as the clicked star
        var stars = element.parentElement.getElementsByClassName("fa");
        // Loop through the stars and add or remove the checked class
        for (var i = 0; i < stars.length; i++) {
            if (i < value) {
                // Add the checked class to fill the star
                stars[i].classList.add("checked");
            } else {
                // Remove the checked class to make the star empty
                stars[i].classList.remove("checked");
            }
        }
        // You can also send the rating value to a server here
        console.log("You rated this product " + value + " stars.");
    }
</script>

